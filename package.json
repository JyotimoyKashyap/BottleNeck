{
  "name": "bottleneck",
  "productName": "BottleNeck",
  "version": "1.0.0",
  "description": "Simple work log tool with global shortcuts built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "generate-icons": "electron-icon-builder --input=./build/icon.png --output=build"
  },
  "keywords": [],
  "author": "Jyotimoy Kashyap",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^39.0.0",
    "electron-icon-builder": "^2.0.1",
    "sharp": "^0.34.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "BottleNeck",
        "executableName": "bottleneck",
        "appBundleId": "com.jyotimoykashyap.bottleneck",
        "icon": "./build/icons/png/512x512.png",
        "protocols": [
          {
            "name": "BottleNeck Protocol",
            "schemes": [
              "bottleneck"
            ]
          }
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "BottleNeck",
            "authors": "Jyotimoy Kashyap",
            "iconUrl": "https://raw.githubusercontent.com/JyotimoyKashyap/BottleNeck/main/build/icons/win/icon.ico",
            "setupIcon": "./build/icons/win/icon.ico",
            "loadingGif": "./build/icons/png/256x256.png"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "BottleNeck",
            "icon": "./build/icons/mac/icon.icns",
            "background": "./build/icons/png/512x512.png"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./build/icons/png/512x512.png",
              "categories": [
                "Utility"
              ],
              "maintainer": "Jyotimoy Kashyap",
              "homepage": "https://github.com/JyotimoyKashyap/BottleNeck"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "./build/icons/png/512x512.png",
              "categories": [
                "Utility"
              ],
              "maintainer": "Jyotimoy Kashyap",
              "homepage": "https://github.com/JyotimoyKashyap/BottleNeck"
            }
          }
        }
      ]
    }
  }
}
